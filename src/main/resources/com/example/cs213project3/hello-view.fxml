<VBox alignment="CENTER" prefHeight="551.0" prefWidth="665.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cs213project3.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TabPane prefHeight="260.0" prefWidth="512.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Schedule/Cancel">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="291.0" prefWidth="625.0">
                        <children>
                            <GridPane layoutX="-2.0" layoutY="1.0" prefHeight="206.0" prefWidth="625.0" style="-fx-background-color: lightgrey;">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="169.0" minWidth="10.0" prefWidth="169.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="177.0" minWidth="10.0" prefWidth="163.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0" prefWidth="233.0" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints maxHeight="76.0" minHeight="10.0" prefHeight="52.0" vgrow="SOMETIMES" />
                                    <RowConstraints maxHeight="62.0" minHeight="7.0" prefHeight="41.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                                <children>
                                    <Label text="Appointment Date" GridPane.halignment="CENTER" />
                                    <DatePicker fx:id="date" promptText="Enter Date" GridPane.columnIndex="1" />
                                    <TextField fx:id="lname" promptText="last name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <TextField fx:id="firstName" prefHeight="0.0" prefWidth="53.0" promptText="first name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <DatePicker fx:id="dob" promptText="date of birth" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <Label text="Patient" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                                    <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                                        <children>
                                            <Button mnemonicParsing="false" text="Schedule" />
                                            <Button mnemonicParsing="false" text="Cancel" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" prefHeight="41.0" prefWidth="240.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                                        <children>
                                            <RadioButton fx:id="imagingService" mnemonicParsing="false" prefHeight="18.0" prefWidth="93.0" text="Imaging">
                                                <toggleGroup>
                                                    <ToggleGroup fx:id="visitType" />
                                                </toggleGroup>
                                            </RadioButton>
                                            <RadioButton fx:id="officeVisit" mnemonicParsing="false" text="Office Visit" toggleGroup="$visitType" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="4">
                                        <children>
                                            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clear" text="Clear" />
                                            <Button fx:id="loadProvidersButton" mnemonicParsing="false" onAction="#loadProviders" text="Load Providers" />
                                        </children>
                                    </HBox>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                        <children>
                                            <ChoiceBox fx:id="timeslotBox" prefHeight="25.0" prefWidth="93.0" />
                                            <ChoiceBox fx:id="providerBox" prefWidth="150.0" />
                                        </children>
                                    </HBox>
                                </children>
                            </GridPane>
                        </children>
                    </AnchorPane>
                </content>
            </Tab>
            <Tab text="Reschedule">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="170.0" prefWidth="512.0" />
                </content>
            </Tab>
            <Tab text="Clinic Locations">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                </content>
            </Tab>
            <Tab text="Menu">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                </content>
            </Tab>
        </tabs>
    </TabPane>
    <TextArea fx:id="output" prefHeight="259.0" prefWidth="625.0" />
</VBox>
